<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFRacecourseSystem"
        xmlns:RacecourseSystem="clr-namespace:RacecourseSystem;assembly=RacecourseSystem" x:Class="WPFRacecourseSystem.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="0.15*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
			<Button Content="Contest" HorizontalAlignment="Left" VerticalAlignment="Top" Width="110" Height="35" Margin="5,0"/>
			<Button Content="Company" HorizontalAlignment="Left" VerticalAlignment="Top" Width="110" Height="35" Margin="5,0"/>
			<Button Content="Horse" HorizontalAlignment="Left" VerticalAlignment="Top" Width="110" Height="35" Margin="5,0"/>
			<Button Content="Horse Owner" HorizontalAlignment="Left" VerticalAlignment="Top" Width="110" Height="35" Margin="5,0"/>
			<Button Content="Participant" HorizontalAlignment="Left" VerticalAlignment="Top" Width="110" Height="35" Margin="5,0"/>
		</StackPanel>
		<TabControl Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SelectionChanged="TabControl_SelectionChanged">
			<TabItem Header="Contests" Name="ContestsTab">
				<Grid Background="#FFE5E5E5">
					<DataGrid AutoGenerateColumns="False" x:Name="ContestsGrid" HorizontalAlignment="Stretch">
						<DataGrid.Columns>
							<DataGridTextColumn Binding="{Binding Id}" Header="Id" Width="0.30*"/>
							<DataGridTextColumn Binding="{Binding Title}" Header="Title" Width="*"/>
							<DataGridTextColumn Binding="{Binding HorseBreed}" Header="Horse Breed" Width="*"/>
							<DataGridTextColumn Binding="{Binding PrizePool}" Header="Prize Pool" Width="0.60*"/>
							<DataGridTextColumn Binding="{Binding DateTime}" Header="Date Time" Width="0.50*"/>
							<DataGridTextColumn Binding="{Binding Jockeys}" Header="Jockeys" Width="0.50*"/>
							<DataGridTextColumn Binding="{Binding Horses}" Header="Horses" Width="0.50*"/>
						</DataGrid.Columns>
					</DataGrid>
				</Grid>
			</TabItem>
			<TabItem Header="Companies" Name="CompaniesTab">
				<Grid Background="#FFE5E5E5">
					<DataGrid AutoGenerateColumns="False" x:Name="CompaniesGrid" HorizontalAlignment="Stretch">
						<DataGrid.Columns>
							<DataGridTextColumn Binding="{Binding Id}" Header="Id" Width="0.30*"/>
							<DataGridTextColumn Binding="{Binding Name}" Header="Name" Width="*"/>
							<DataGridTextColumn Binding="{Binding Country}" Header="Country" Width="*"/>
							<DataGridTextColumn Binding="{Binding CompanyType}" Header="Company Type" Width="0.45*"/>
							<DataGridTextColumn Binding="{Binding HorseAmount}" Header="Horse Amount" Width="0.45*"/>
						</DataGrid.Columns>
					</DataGrid>
				</Grid>
			</TabItem>
			<TabItem Header="Horses">
				<Grid Background="#FFE5E5E5">
				</Grid>
			</TabItem>
			<TabItem Header="Horse Owners">
				<Grid Background="#FFE5E5E5">
				</Grid>
			</TabItem>
			<TabItem Header="Participants">
				<Grid Background="#FFE5E5E5">
				</Grid>
			</TabItem>
		</TabControl>
	</Grid>
</Window>
